{
    "files.exclude": {
        "venv": true,
    },
    "flake8.args": [
        "--ignore=E203,E501",
        "--exclude=obsfeare-env",
    ],
    "python.analysis.typeCheckingMode": "basic",
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
   },
}